@model CouponModel

<div class="text-center">
    <div style="font:xx-large"</div>
    <h1 style="font:normal">Coupons</h1>
</div>

<div style="margin: 2px; padding: 3px;"></div>
<div class="d-flex justify-content-center gap-3 mt-4">
    <form asp-controller="Coupon" asp-action="EditCoupon">

		<input type="hidden" asp-for="Id" />

		<label>CouponName</label>
		<input type="text" asp-for="CouponName" />
		@Html.ValidationMessageFor(m => m.CouponName)

		<label>CouponId</label>
		<input type="text" asp-for="CouponId" />
		@Html.ValidationMessageFor(m => m.CouponId)

		<label>CouponDiscount</label>
		<input type="text" asp-for="CouponDiscount" />
		@Html.ValidationMessageFor(m => m.CouponDiscount)

        <button type="submit">Enter</button>
    </form>
 </div>
